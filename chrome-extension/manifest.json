{
  "manifest_version": 3,
  "name": "Wizzo Assistant",
  "version": "2.0",
  "description": "Record audio and add notes for processing in Wizzo platform",
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications",
    "downloads",
    "alarms"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidepanel/*", "icons/*", "recordingView.html", "recordingView.js", "popup/styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}